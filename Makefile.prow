-include /opt/build-harness/Makefile.prow

.PHONY: build
build:
	docker build -f Dockerfile . -t search-indexer

.PHONY: lint
lint:
	@echo $(shell go env)
	@echo $(shell go env GOHOME)
	@echo GOHOME: ${GOHOME}
	@echo $(shell go env GOPATH)
	@echo GOPATH: ${GOPATH}
	@echo $(shell go env GOHOME)
	@echo GOPATH: ${GOHOME}
	go mod tidy
	$(shell go env GOHOME)/bin/golangci-lint run
	gosec ./...

.PHONY: unit-test
unit-test:
	go test ./... -v -coverprofile cover.out
